## Appearance

# Options
gaps inner 2
gaps outer 2
default_border pixel 2
font pango:Monospace 9

# Variables
set $f-b	#641e16
set $i-b 	#17202a
set $u-b 	#922b21
set $t 		#f3f4f5

set $mod Mod4

# class                 border  backgr. text    indicator 	child_border
client.focused          $f-b 	$f-b 	$t 		$f-b   		$f-b
client.focused_inactive $i-b 	$i-b 	$t 		$i-b   		$i-b
client.unfocused        $i-b 	$i-b 	$t 		$i-b   		$i-b
client.urgent           $u-b 	$u-b	$t 		$u-b  		$u-b
client.placeholder      $i-b 	$i-b 	$t 		$i-b   		$i-b
client.background       $i-b

# i3bar
bar {
        status_command i3blocks
		position top
		colors {
			background $i-b 
        	statusline $t
        	separator $t
			# class				border	backgr.	text
        	focused_workspace  	$f-b 	$f-b 	$t
        	active_workspace   	$i-b	$i-b 	$t
        	inactive_workspace 	$i-b	$i-b 	$t
        	urgent_workspace   	$u-b	$u-b 	$t
		}
}

## Applications
exec_always --no-startup-id feh --bg-scale ~/.config/wp.png
exec --no-startup-id picom -f
exec --no-startup-id xss-lock --transfer-sleep-lock -- i3lock -c "$i-b" --nofork

## Bindings
bindsym $mod+Return exec termite
bindsym $mod+b exec brave
bindsym $mod+p exec termite -e ranger
bindsym $mod+d exec dmenu_run -nb "$i-b" -nf "$t" -sb "$f-b" -sf "$t"
bindsym $mod+Shift+c kill

floating_modifier $mod

# Volume
bindsym $mod+F12 exec --no-startup-id pamixer -i 5 && pkill -RTMIN+1 i3blocks
bindsym $mod+F11 exec --no-startup-id pamixer -d 5 && pkill -RTMIN+1 i3blocks
bindsym $mod+F10 exec --no-startup-id pamixer -t && pkill -RTMIN+1 i3blocks
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 5 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 5 && pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec --no-startup-id pamixer -t && pkill -RTMIN+1 i3blocks

# Brightness
bindsym XF86MonBrightnessUp exec --no-startup-id brightnessctl s +50
bindsym XF86MonBrightnessDown exec --no-startup-id brightnessctl s 50-


# change focus
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right
bindsym $mod+Left focus left
bindsym $mod+Down focus down
bindsym $mod+Up focus up
bindsym $mod+Right focus right

# move focused window
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right
bindsym $mod+Shift+Left move left
bindsym $mod+Shift+Down move down
bindsym $mod+Shift+Up move up
bindsym $mod+Shift+Right move right

# split orientation
bindsym $mod+Shift+v split h
bindsym $mod+v split v

# enter fullscreen mode for the focused container
bindsym $mod+f fullscreen toggle

# toggle tiling / floating
bindsym $mod+Shift+space floating toggle

# change focus between tiling / floating windows
bindsym $mod+space focus mode_toggle

# focus the parent/child container
bindsym $mod+a focus parent
bindsym $mod+Shift+a focus child

# resize window
mode "resize" {
        bindsym h       resize shrink width 10 px or 10 ppt
        bindsym j       resize grow height 10 px or 10 ppt
        bindsym k       resize shrink height 10 px or 10 ppt
        bindsym l       resize grow width 10 px or 10 ppt
        bindsym Left        resize shrink width 10 px or 10 ppt
        bindsym Down        resize grow height 10 px or 10 ppt
        bindsym Up          resize shrink height 10 px or 10 ppt
        bindsym Right       resize grow width 10 px or 10 ppt

        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym $mod+r mode "default"
}
bindsym $mod+r mode "resize"

# resize gaps
mode "gaps" {
		bindsym plus gaps inner current plus 2, gaps outer current plus 2
		bindsym minus gaps inner current minus 2, gaps outer current minus 2
		bindsym Shift+minus gaps inner current set 0, gaps outer current set 0
		bindsym Shift+plus gaps inner current set 2, gaps outer current set 2

		bindsym Return mode "default"
		bindsym Escape mode "default"
		bindsym $mod+g mode "default"
}
bindsym $mod+g mode "gaps"

# change container layout
mode "$layout" {
		bindsym s layout stacking, mode "default"
		bindsym t layout tabbed, mode "default"
		bindsym e layout toggled split, mode "default"

		bindsym Return mode "default"
		bindsym Escape mode "default"
		bindsym $mod+z mode "default"
}
bindsym $mod+z mode "$layout"
set $layout (s)tacking, (t)abbed, (e)toggled split

# system commands
mode "$system" {
		bindsym 1 reload, mode "default"
		bindsym 2 restart, mode "default"
		bindsym l exec i3lock -c "$i-b", mode "default"
		bindsym e exec "i3-nagbar -t warning -m 'Exit i3?' -B 'Yes' 'i3-msg exit'", mode "default"
		bindsym s exec systemctl suspend, mode "default"
		bindsym r exec "i3-nagbar -t warning -m 'Reboot computer?' -B 'Yes' 'reboot'", mode "default"
		bindsym Shift+s exec "i3-nagbar -t warning -m 'Shutdown computer?' -B 'Yes' 'shutdown now'", mode "default"

		bindsym Return mode "default"
		bindsym Escape mode "default"
}
bindsym $mod+Escape mode "$system"
set $system (1)eload, (2)restart, (l)ock, (e)xit, (r)eboot, (s)uspend, (shift+s)hutdown

## Workspaces
set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

# switch to workspace
bindsym $mod+1 workspace number $ws1
bindsym $mod+2 workspace number $ws2
bindsym $mod+3 workspace number $ws3
bindsym $mod+4 workspace number $ws4
bindsym $mod+5 workspace number $ws5
bindsym $mod+6 workspace number $ws6
bindsym $mod+7 workspace number $ws7
bindsym $mod+8 workspace number $ws8
bindsym $mod+9 workspace number $ws9
bindsym $mod+0 workspace number $ws10

# move focused container to workspace
bindsym $mod+Shift+1 move container to workspace number $ws1
bindsym $mod+Shift+2 move container to workspace number $ws2
bindsym $mod+Shift+3 move container to workspace number $ws3
bindsym $mod+Shift+4 move container to workspace number $ws4
bindsym $mod+Shift+5 move container to workspace number $ws5
bindsym $mod+Shift+6 move container to workspace number $ws6
bindsym $mod+Shift+7 move container to workspace number $ws7
bindsym $mod+Shift+8 move container to workspace number $ws8
bindsym $mod+Shift+9 move container to workspace number $ws9
bindsym $mod+Shift+0 move container to workspace number $ws10
